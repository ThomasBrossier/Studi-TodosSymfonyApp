{% extends 'base.html.twig' %}

{% block title %}TodosLists APP{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/styles/lists.css"/>
{% endblock %}
{% block body %}
    <div class="container">
        <div class="topbar">
            <a  class="btn btn-add" href="./create-list"><i class="fa-solid fa-plus"></i>Ajouter une liste</a>
        </div>
        <div class="board">
            {% for list in lists %}
                <div class="card">
                    <div class="card-header">
                        <div class="title">{{ list.name}} - {{ list.color}}</div>
                        <a type="button" class="btn btn-add" href="./update-list/{{list.id}}"><i class="fa-solid fa-pen-to-square"></i>Modifier</a>
                        <a type="button" href="/delete-list/{{list.id}}" class="btn btn-delete" ><i class="fa-solid fa-trash"></i></a>
                    </div>
                        <ul class="tasksList">
                            {% for task in list.tasks %}
                                <li class="task">
                                    <input class="taskDone" type="checkbox"  checked={{task.done ? "checked" : ""}} />
                                    <h4>{{task.title}}</h4>
                                    <a type="button" href="" class="btn btn-delete" ><i class="fa-solid fa-trash"></i></a>
                                </li>
                            {% endfor %}
                        </ul>      
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

